<script src="/assets/ap-scroll-top-codigo.js"></script>

<p id="notice"><%= notice %></p>

<h1 class="jumbotron">Llistat Plantilles Vidres/PD/BPH/BPM/FD/E-I</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Tipus</th>
      <th>Ubicacio</th>
      <th>Descripcio</th>
      <th>Foto Inicial</th>
      <th>Recompte</th>
      <th>Estat ok</th>
      <th>Observacions</th>
      <th>Foto auditoria</th>
     <!-- <th>Auditv</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vidres.each do |vidre| %>
      <tr>
        <td><%= vidre.nom %></td>
        <td><%= vidre.tipus %></td>
        <td><%= vidre.ubicacio %></td>
        <td><%= vidre.descripcio %></td>
        <td><%= image_tag vidre.fotobase, :style => "width:175px;height:75px;",:class=>"img-thumbnail" %></td>
        <td align="center"><%= vidre.recompte %></td>
        <!-- <td><%= check_box_tag vidre.estat_ok %></td> -->
        <td><%= check_box "vidre", "estat_ok", {:checked => vidre.estat_ok, :disabled => true}%></td>
        <td><%= vidre.observacions %></td>
        <td><%= image_tag vidre.foto, :style => "width:175px;height:75px;",:class=>"img-thumbnail" %></td>
     <!--   <td><%= vidre.auditv %></td> -->
        <td><%= link_to 'Veure', vidre, :class=>'btn btn-primary btn-block' %></td>
        <td><%= link_to 'Editar', edit_vidre_path(vidre), :class=>'btn btn-warning btn-block' %></td>
     <!--  <td><%= link_to 'Destroy', vidre, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= link_to 'Crear plantilla', new_vidre_path, :class=>'btn btn-primary btn-block'%>
<br>
<br>
<%= link_to 'Enrera', auditvs_path, :class=>'btn btn-primary btn-block'%>
<br>
<%= paginate @vidres %>
<%= page_entries_info @vidres %>