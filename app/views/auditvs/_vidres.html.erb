<fieldset>
  <div class="field">
    <%= f.label :nom %>
    <%= f.text_field :nom , :readonly => true %>
  </div>
  </br>
  <div class="field">
    <%= f.label :tipus %>
    <%= f.text_field :tipus, :readonly => true, :style => "min-width:20%" %>
  </div>
  </br>
  <div class="field">
    <%= f.label :ubicacio %>
    <%=  f.select(:ubicacio, Vidre::UBICACIO) %>
  </div>
  </br>
  <div class="field">
    <%= f.label :descripcio %>
    <%= f.text_area :descripcio %>
  </div>
  </br>
  <div class="field">
    <%= f.label "Foto Inicial" %><br>
    <%= f.file_field :fotobase, :accept =>'image/*' %>
  </div>
  </br>
  <div class="field">
    <%= f.label :recompte %>
    <%= f.number_field :recompte %>
  </div>
  </br>
  <div class="field">
    <%= f.label :estat_ok %>
    <%= f.check_box :estat_ok %>
  </div>
  </br>
  <div class="field">
    <%= f.label :observacions %><br>
    <%= f.text_area :observacions %>
  </div>
  </br>
  <div class="field">
    <%= f.label "Foto Auditoria" %><br>
    <%= f.file_field :foto, :accept =>'image/*' %>
  </div>
</fieldset>
