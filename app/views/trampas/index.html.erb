<p id="notice"><%= notice %></p>

<h1 class="jumbotron">Llistat Plantilles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Tipus</th>
      <th>Ubicacio</th>
      <th>Recompte</th>
      <th>Estat ok</th>
      <th>Observacions</th>
      <!--<th>Audit</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trampas.each do |trampa| %>
      <tr>
        <td><%= trampa.nom %></td>
        <td><%= trampa.tipus %></td>
        <td><%= trampa.ubicacio %></td>
        <td><%= trampa.recompte %></td>
        <td><%= trampa.estat_ok %></td>
        <td><%= trampa.observacions %></td>
       <!-- <td><%= trampa.audit %></td> -->

        <td><%= link_to 'Veure', trampa, :class=>'btn btn-primary btn-block' %></td>
        <td><%= link_to 'Editar', edit_trampa_path(trampa), :class=>'btn btn-warning btn-block' %></td>

        <!-- <td><%= link_to 'Esborrar', trampa, method: :delete, data: { confirm: 'Esborrar plantilla?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

</br>
