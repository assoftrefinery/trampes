<p id="notice"><%= notice %></p>

<h1 class="jumbotron">Històric de auditories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Data</th>
      <th>Observacions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @audits.each do |audit| %>
      <tr>
        <td><%= audit.dataaudit.strftime('%d-%m-%Y') %> / <%= audit.created_at.strftime('%H:%M')%> <b>Propera revisio:</b> <%= (audit.created_at + 2.months).strftime('%d-%m-%Y') %> </td>
        <td><%= audit.observacions %></td>
        <td><%= link_to 'Veure', audit %></td>

         <td><%= link_to 'Editar capçalera', edit_audit_path(audit) %></td>

        <td><%= link_to 'Esborrar', audit, method: :delete, data: { confirm: 'Esborrar auditoria y trampes relacionades. Estas segur?' } %></td>
      </tr>
    <% end.empty? %>
    No hi han auditories.
    <% end %>
  </tbody>
</table>

</br>

<%= link_to 'Nova auditoria', new_audit_path, :class=>'btn btn-primary btn-block' %>

</br>
