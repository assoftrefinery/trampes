<script src="/assets/ap-scroll-top-codigo.js"></script>

<p id="notice"><%= notice %></p>

<h1 class="jumbotron">Històric d'auditories de Trampes</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Data</th>
      <th>Observacions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @audits.each do |audit| %>
      <tr>
        <td><%= audit.dataaudit.strftime('%d-%m-%Y') %> / <%= audit.created_at.strftime('%H:%M')%> <b>Propera revisio:</b> <%= (audit.created_at + 2.months).strftime('%d-%m-%Y') %> </td>
        <td><%= audit.observacions %></td>
        <td><%= link_to 'Veure', audit, :class=>'btn btn-primary btn-block' %></td>

         <td><%= link_to 'Editar capçalera', edit_audit_path(audit), :class=>'btn btn-warning btn-block' %></td>

        <td><%= link_to 'Esborrar', audit, method: :delete, data: { confirm: 'Esborrar auditoria y trampes relacionades. Estas segur?' }, :class=>'btn btn-danger btn-block' %></td>
      </tr>
    <% end.empty? %>
    No hi han auditories.
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @audits %>
<%= page_entries_info @audits %>

<br>

<div>
<%= link_to 'Nova auditoria de Trampes', new_audit_path, :class=>'btn btn-primary btn-block' %>
<%= link_to 'Plantilles de Trampes', trampas_path, :class=>'btn btn-primary btn-block' %>
  </div>
</br>
<%= link_to 'Enrera', '\home\menu_auditories', :class=>'btn btn-primary btn-block' %>
<%= link_to 'Menu Principal', home_principal_path, :class=>'btn btn-primary btn-block' %>

</br>
